extends base
block extra-headers
  script(src='/static/js/record.js')
  link(rel='stylesheet' href='/static/css/record.css')

  script(src='/static/sweetalert/dist/sweetalert.min.js')
  link(rel='stylesheet' href='/static/sweetalert/dist/sweetalert.css')

  - if (success)
    script window.show_alert = true

block content
  div.row
    div.col-sm-8.col-sm-offset-2
      a(class="logo-container" href="http://xfair.io")
        img(class="logo" src="/static/img/logo.svg"
          onerror="this.onerror=null; this.src='/static/img/logo.png'")
      h2 Resume Drop
      img(class="line-plane" src="/static/img/dash_line_and_plane.svg")
      form(method='POST')
        != form.toHTML()
        div.row#links
          div.col-sm-12
            a(href=record.s3_url, target="_blank") View your resume
            a(href="/" + record.uuid + "/update" target="_blank") Update your resume
        div.form-group.btn-container
          button.btn.btn-info(type='submit')
            - if (record.filled_out)
              | Make changes!
            - else
              | Submit
